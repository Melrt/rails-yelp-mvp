<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Enter a new <strong>restaurants</strong> </h1>

        <%= simple_form_for @restaurant do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category, collection: Restaurant::CATEGORY %>
        </div>
          <%= f.submit "add a restaurant", class: "btn btn-primary" %>
        <% end %>


        <%= link_to "cancel", restaurants_path, class: "btn btn-danger" %>


    </div>
  </div>
</div>

