<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Enter a new review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATING %>
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
